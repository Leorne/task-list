{% extends 'base.html.twig' %}

{% block title %}
    Edit Task
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <form action="{{ path('tasks.complete', {"id": taskId}) }}" method="POST">
                <button type="submit" class="m-1 btn btn-sm btn-primary">Complete</button>
            </form>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">Edit</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}