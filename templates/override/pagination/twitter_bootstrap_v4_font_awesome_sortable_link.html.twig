<a
{% for attr, value  in options %}
{{ attr }}="{{ value }}"
{% endfor %}>
<span class="float-right">
        {% if sorted %}
            {% if direction == 'desc' %}
                <span>&uArr;</span>
            {% else %}
                <span>&dArr;</span>
            {% endif %}
        {% else %}
            <i class="fa fa-sort"></i>
        {% endif %}
    </span>
{{ title }}
</a>