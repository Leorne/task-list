<a{% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %} style="color: #000;">
    <span class="pull-right">
        {% if sorted %}
            {% if direction == 'desc' %}
                <span class="glyphicon glyphicon-sort-by-attributes-alt">&darr;</span>
            {% else %}
                <span class="glyphicon glyphicon-sort-by-attributes">&darr;</span>
            {% endif %}
        {% else %}
            <span class="glyphicon glyphicon-sort" style="color: #d2d6de;"></span>
        {% endif %}
    </span>
    {{ title }}
</a>
